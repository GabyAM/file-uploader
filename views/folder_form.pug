mixin folderForm({name, action, title, errors, values })
  include modal_form.pug
  -
    let args = {
       name: name,
       action: action, 
       method: method,
       enctype: 'application/x-www-form-urlencoded',
       title: title,
       formInputs: [{type: 'text', name: 'name', label: 'Name' }],
       errors: errors || null,
       values: values || null
    }
  +modalForm(args)
